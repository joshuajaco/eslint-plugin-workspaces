{
  "name": "eslint-plugin-workspaces",
  "version": "0.8.0",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "monorepo",
    "packages",
    "workspaces",
    "yarn",
    "lerna",
    "npm",
    "pnpm",
    "bolt"
  ],
  "repository": "joshuajaco/eslint-plugin-workspaces",
  "license": "MIT",
  "exports": "./lib/index.js",
  "main": "lib/index.js",
  "files": [
    "lib/",
    "CHANGELOG.md"
  ],
  "scripts": {
    "coverage": "mkdir -p coverage && touch ./coverage/lcov.info && nyc report --reporter=text-lcov > ./coverage/lcov.info",
    "format": "prettier . -w --ignore-path .gitignore",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && nyc mocha tests --recursive --file tests/setup.js"
  },
  "dependencies": {
    "find-workspaces": "^0.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "eslint": "^8.28.0",
    "eslint-plugin-eslint-plugin": "^5.0.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.0",
    "sinon": "^14.0.2"
  }
}
